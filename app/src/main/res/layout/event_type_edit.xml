<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="EVENT EDITTING"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Type:"
            android:textAlignment="center"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Enter Type of Event"
            android:inputType="text" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of First Requirement"
            android:textAlignment="center"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/details1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Details 1"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of Second Requirement"
            android:textAlignment="center"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/details2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Details 2"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of Third Requirement"
            android:textAlignment="center"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/details3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Details 3"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of Fourth Requirement"
            android:textAlignment="center"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/details4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Details 4"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonforsave"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="Save" />

            <Button
                android:id="@+id/buttonfordelete"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="Delete" />

            <Button
                android:id="@+id/buttonforcancel"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="Cancel" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>